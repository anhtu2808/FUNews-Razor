@page
@model FUNewsRazorPages.Pages.Tags.IndexModel
@{
    ViewData["Title"] = "Tags";
}

<h2 class="mb-3">Tags</h2>
<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Tag Name</th>
            <th>Note</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Tags)
    {
        <tr>
            <td>@item.TagName</td>
            <td>@item.Note</td>
            <td>
                <a asp-page="Edit" asp-route-id="@item.TagId">Edit</a> |
                <a asp-page="Details" asp-route-id="@item.TagId">Details</a> |
                <a asp-page="Delete" asp-route-id="@item.TagId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
