@page
@model FUNewsRazorPages.Pages.IndexModel
@{
    ViewData["Title"] = "Danh sách bài viết";
}

<h2 class="mb-4">📰 Danh sách bài viết</h2>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var news in Model.NewsList)
    {
        <div class="col">
            <div class="card h-100 shadow-sm border-0">
                @if (!string.IsNullOrEmpty(news.UrlThumbnails))
                {
                    <img src="@news.UrlThumbnails" class="card-img-top" style="object-fit:cover; height:180px;" />
                }
                <div class="card-body">
                    <h5 class="card-title text-primary">@news.NewsTitle</h5>
                    <p class="card-text text-muted">
                        <small>@news.CreatedDate?.ToString("dd/MM/yyyy")</small>
                        <span class="badge @(news.NewsStatus == true ? "bg-success" : "bg-secondary") float-end">
                            @(news.NewsStatus == true ? "Đang hiển thị" : "Đã ẩn")
                        </span>
                    </p>
                    <p class="card-text">@news.Headline</p>
                </div>
            </div>
        </div>
    }
</div>